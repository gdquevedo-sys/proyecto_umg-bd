@model ErrorPersonalizedViewModel
@{
    ViewData["Title"] = @Model.title;
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@Environment.GetEnvironmentVariable("APP_NAME") | @ViewData["Title"]</title>
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- SwwetAlert -->
    <link rel="stylesheet" href="~/plugins/sweetalert2/sweetalert2.min.css">
    <link rel="stylesheet" href="~/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">
    <script type="text/javascript" src="~/plugins/sweetalert2/sweetalert2.all.min.js"></script>
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
</head>
<body class="layout-top-nav" style="background-image: linear-gradient(45deg, #1ebdc3 2%, white 98%);">
    <div class="wrapper">    
        <div class="content-wrapper" style="background-image: linear-gradient(45deg, #1ebdc3 2%, white 98%);">
            <div class="content-header">
                <div class="container">
                    <div class="row mb-12">
                        <div class="col-sm-12" style="text-align:center">
                             <img src="~/images/LogoFinal.png" alt="" style="width: 350px !important;">
                        </div>
                    </div>
                </div>
            </div>
            <div class="content">
                <div class="container">
                    <div class="card card-danger">
                        <div class="card-header">
                            <h3 class="card-title">@Model.title</h3>
                        </div>
                        <div class="card-body">
                            <div class="error-page">
                                <h2 class="headline text-danger">@Model.code</h2>

                                <div class="error-content">
                                    <h3><i class="fas fa-exclamation-triangle text-danger"></i> @Model.error</h3>
                                    <p>@Model.description</p>
                                    @if (Model.code != 401)
                                    {
                                        <p><a href="javascript:history.back()">Regresar a la página anterior</a></p>
                                    }
                                    else
                                    {
                                        @if (String.IsNullOrEmpty(Model.returnUrl))
                                        {
                                            <p><a asp-controller="Home" asp-action="Login">Regresar a Login</a></p>
                                        }
                                        else
                                        {
                                            <p><a href="@Model.returnUrl">Regresar a Login</a></p>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
