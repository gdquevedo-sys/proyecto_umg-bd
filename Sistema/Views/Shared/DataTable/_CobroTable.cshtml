@model Sistema.Models.Formulario.CobroForm

<table id="DataTableCobro" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th style="text-align: center; vertical-align: middle;">ID</th>
            <th style="text-align: center; vertical-align: middle;">Factura</th>
            <th style="text-align: center; vertical-align: middle;">Tipo Pago</th>
            <th style="text-align: center; vertical-align: middle;">Total Q</th>
            <th style="text-align: center; vertical-align: middle;">Pagado</th>
            <th style="text-align: center; vertical-align: middle;">Restante</th>
            <th style="text-align: center; vertical-align: middle;">Fecha</th>
            <th style="text-align: center; vertical-align: middle;">Opciones</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.lista.Count; i++)
        {
            <tr>
                <td style="text-align: left; vertical-align: middle;">@Html.DisplayFor(m => m.lista[i].Id)</td>
                <td style="text-align: left; vertical-align: middle;">@Html.DisplayFor(m => m.lista[i].Factura.Numero)</td>
                <td style="text-align: left; vertical-align: middle;">@Html.DisplayFor(m => m.lista[i].Factura.TipoPago)</td>
                <td style="text-align: right; vertical-align: middle;">Q @Html.DisplayFor(m => m.lista[i].MontoReal)</td>     
                <td style="text-align: right; vertical-align: middle;">Q @Html.DisplayFor(m => m.lista[i].Monto)</td>      
                <td style="text-align: right; vertical-align: middle;">Q @Html.DisplayFor(m => m.lista[i].MontoRestante)</td>  
                <td style="text-align: center; vertical-align: middle;">@Html.DisplayFor(m => m.lista[i].Auditoria.AuditFechaCreacion)</td>   
                <td style="text-align: center; vertical-align: middle;">
                    <table class="table table-bordered text-center">
                        <tbody>
                            <tr>
                                <td>
                                    <a onclick="eliminar(@Model.lista[i].Id)" class="btn btn-md btn-info">ELIMINAR</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
        }
    </tbody>
</table>

<script type="text/javascript">
    $(document).ready(function () {
        $('#DataTableCobro').DataTable({
          "paging": true,
          "lengthChange": true,
          "searching": true,
          "ordering": true,
          "info": true,
          "autoWidth": true,
          "responsive": true,
          lengthMenu: [10, @Model.lista.Count],
          "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
        }).buttons().container().appendTo('#DataTableCobro_wrapper .col-md-6:eq(0)');
    });
</script>
