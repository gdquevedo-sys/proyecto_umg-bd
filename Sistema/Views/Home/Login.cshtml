@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@Environment.GetEnvironmentVariable("APP_NAME") | @ViewData["Title"]</title>
    <!-- SwwetAlert -->
    <link rel="stylesheet" href="~/plugins/sweetalert2/sweetalert2.min.css">
    <link rel="stylesheet" href="~/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">
    <script type="text/javascript" src="~/plugins/sweetalert2/sweetalert2.all.min.js"></script>
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
</head>
<body class="layout-top-nav layout-footer-fixed" style="background-image: linear-gradient(45deg, #1ebdc3 2%, white 98%);">
    @Html.Partial("_NotificationPanel")
    <div class="loader_oficial"></div>
    <div class="wrapper">    
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper" style="background-image: linear-gradient(45deg, #1ebdc3 2%, white 98%);">
            <div class="content-header">
                <div class="container">
                    <div class="row mb-12">
                        <div class="col-sm-12" style="text-align:center">
                             <img src="~/images/LogoFinal.png" alt="" style="width: 350px !important;">
                        </div>
                    </div>
                </div>
            </div>
            <div class="content">
                <div class="container">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">Inicio de Sesión</h3>
                        </div>
                        <form method="post" action="@Url.Action("Login", "Home")">
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="username">CUI</label>
                                    <input type="text" class="form-control" id="username" name="username" value="1590839151601" placeholder="Ingrese el CUI">
                                </div>
                                <div class="form-group">
                                    <label for="password">Contraseña</label>
                                    <input type="password" class="form-control" id="password" name="password" value="123" placeholder="Ingrese la contraseña">
                                </div>
                                <!--<div class="form-group">
                                    <a asp-route="Auth_RecuperarPassword">¿Has olvidado la contraseña?</a>
                                </div>-->
                            </div>
                            <div class="card-footer" style="text-align:center">
                                <button type="submit" class="btn btn-secondary">Ingresar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
      <!-- /.content-wrapper -->
      @await Component.InvokeAsync("Footer")
    </div>
    <!-- ./wrapper -->

    <script>
        window.onload = function() {
            setTimeout(function() {
			    $('.loader_oficial').css('display', 'none');
            }, 1000);
		}
    </script>
</body>
</html>
