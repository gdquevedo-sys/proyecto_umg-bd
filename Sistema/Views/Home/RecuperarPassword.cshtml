@model Sistema.Models.Home.RecuperarPasswordModel
@{
    ViewData["Title"] = "Recuperar Contraseña";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@Environment.GetEnvironmentVariable("APP_NAME") | @ViewData["Title"]</title>
    <!-- SwwetAlert -->
    <link rel="stylesheet" href="~/plugins/sweetalert2/sweetalert2.min.css">
    <link rel="stylesheet" href="~/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">
    <script type="text/javascript" src="~/plugins/sweetalert2/sweetalert2.all.min.js"></script>
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/css/custom.css">
    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
</head>
<body class="layout-top-nav" style="background-image: linear-gradient(45deg, #1ebdc3 2%, white 98%);">
    @Html.Partial("_NotificationPanel")
    <div class="loader_oficial"></div>
    <div class="wrapper">    
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper" style="background-image: linear-gradient(45deg, #1ebdc3 2%, white 98%);">
            <div class="content-header">
                <div class="container">
                    <div class="row mb-12">
                        <div class="col-sm-12" style="text-align:center">
                             <img src="~/images/LogoFinal.png" alt="" style="width: 350px !important;">
                        </div>
                    </div>
                </div>
            </div>
            <div class="content">
                <div class="container">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">Recuperación de Contraseña</h3>
                        </div>
                        <form method="post" action="@Url.Action("RecuperarPassword", "Home")">
                            @Html.AntiForgeryToken()
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="CUI">CUI</label>
                                    <input asp-for="CUI" class="form-control" placeholder="Ingrese el CUI"/>
                                    @Html.ValidationMessageFor(Model => Model.CUI)
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email">Correo</label>
                                    <input asp-for="Email" class="form-control" placeholder="Ingrese el correo"/>
                                    @Html.ValidationMessageFor(Model => Model.Email)
                                </div>
                                <div class="form-group">
                                    Si la cuenta el CUI se encuentra registrado, recibirá un correo con los pasos para registrar una nueva contraseña.
                                </div>
                            </div>
                            <div class="card-footer" style="text-align:center">
                                <button type="submit" class="btn btn-secondary">Enviar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
      <!-- /.content-wrapper -->
    </div>
    <!-- ./wrapper -->

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        window.onload = function() {
            setTimeout(function() {
			    $('.loader_oficial').css('display', 'none');
            }, 1000);
		}
    </script>
</body>
</html>
